{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Zeta: Build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "C:/msys64/usr/bin/bash.exe",
                    "args": [
                        "-c"
                    ]
                }
            },
            "command": "g++",
            "args": [
                "source/{**/*,**/**/*}.cpp",
                "-Isource",
                "-IC:/msys64/mingw64/include",
                "-LC:/msys64/mingw64/lib",
                "-std=c++17",
                "-Wall",
                "-Wno-multichar",
                "-Wno-sign-compare",
                "-Wno-unused-variable",
                "-lmingw32",
                "-g",
                "-o",
                "bin/zeta.exe"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}